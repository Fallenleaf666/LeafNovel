<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialogviewbg"
>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/linearLayout14" android:layout_margin="28dp"
            android:gravity="center_horizontal">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="新增分類"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" android:textColor="@color/fontMorning"
                    android:id="@+id/DialogUpdateFolderTitle"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:ems="10"
                    android:id="@+id/editTextTextPersonName" android:layout_weight="1"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textShortMessage|textPersonName"
                    android:gravity="start|top"
                    android:id="@+id/DialogAddBookFolderEditTextView"
                    android:hint="分類名稱"
                    android:textColor="@color/fontMorning" android:textSize="16sp"
                    app:backgroundTint="@color/fontMorning"
                    android:layout_marginTop="15dp" android:layout_marginBottom="12dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:text="新增"
            android:layout_width="75dp"
            android:layout_height="30dp" android:id="@+id/DialogAddBookFolderBT"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout14"
            android:background="@drawable/send_button_background"
            android:textColor="#E4F4EFEF" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout14" android:layout_marginTop="2dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>