<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="60dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="1dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/ChapterRow">
        <TextView
                android:text="序號"
                android:layout_width="40dp"
                android:layout_height="match_parent" android:id="@+id/IndexView" android:gravity="center_vertical"
                android:layout_marginStart="5dp" android:visibility="gone"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/chapter_saved_stat_unsaved"
                android:id="@+id/Saved_StatView" android:layout_gravity="center" android:layout_marginStart="20dp"/>
        <TextView
                android:text="章節名稱"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/ChapterTitle" android:layout_weight="1"
                android:textSize="20dp" android:gravity="center_vertical" android:layout_marginStart="20dp"
                android:maxLines="1" android:layout_marginEnd="0dp"/>

        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp" android:src="@drawable/ic_baseline_more_vert_24"
                android:id="@+id/DownloadBT"
                android:background="@android:color/transparent" android:layout_marginEnd="10dp"
                android:visibility="visible" android:layout_gravity="center_vertical"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>