<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BookDetailActivity">

    <ImageView
            android:layout_width="110dp"
            android:layout_height="136dp" tools:srcCompat="@android:drawable/ic_menu_report_image"
            android:id="@+id/Book_imgView"
            android:src="@android:drawable/ic_menu_report_image" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="44dp"
            android:layout_marginStart="20dp"/>
    <TextView
            android:text="書名"
            android:layout_width="wrap_content"
            android:layout_height="37dp" android:id="@+id/Book_titleView"
            app:layout_constraintStart_toEndOf="@+id/Book_imgView" android:layout_marginStart="12dp"
            android:textSize="20dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="70dp"/>
    <TextView
            android:text="作者"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Book_authorView"
            app:layout_constraintStart_toEndOf="@+id/Book_imgView"
            android:layout_marginStart="20dp" app:layout_constraintTop_toBottomOf="@+id/Book_titleView"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="這是一本書"
            android:layout_width="311dp"
            android:layout_height="99dp" android:id="@+id/Book_descripeView"
            app:layout_constraintTop_toBottomOf="@+id/Book_imgView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" android:layout_marginStart="48dp"/>
    <Button
            android:text="目錄"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bookDitectoryBT"
            app:layout_constraintTop_toBottomOf="@+id/Book_descripeView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" android:layout_marginStart="148dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>