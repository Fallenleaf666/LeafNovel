<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BookContentActivity" android:background="#FFFFFF" android:scaleX="1" android:scaleY="1">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/scrollView2" android:visibility="visible">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/ControlView">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/ChTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp" tools:text="章節名稱" android:textSize="16sp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/ChContent"
                    app:layout_constraintTop_toBottomOf="@+id/ChTitle" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="15dp" android:layout_marginTop="10dp" android:textSize="20sp"
                    android:lineSpacingExtra="10sp"
                    tools:text="內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文內文"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="visible"
            android:background="#8D9A9797"
            android:id="@+id/FunctionMenu">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/linearLayout3"
                app:layout_constraintTop_toBottomOf="@+id/ToolBar"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout4">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/LastPageBT" android:layout_weight="1" android:background="#48636161"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/ImageView"
                    android:layout_weight="4"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:id="@+id/NextPageBT" android:layout_weight="1" android:background="#48636161"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/linearLayout4">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary" android:id="@+id/StyleSettingView"
                    android:visibility="visible" android:animateLayoutChanges="true">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:src="@drawable/ic_baseline_font_download_24"
                            android:id="@+id/imageView" android:scaleType="center"/>
                    <SeekBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/FontSizeSeekBar"
                            android:layout_gravity="center_vertical" android:layout_marginStart="10dp"
                            android:layout_marginEnd="20dp" android:max="15" android:progress="11"
                            android:indeterminate="false"
                            android:thumbOffset="8dip"
                            style="@style/FontSeekBar"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp" android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:src="@drawable/ic_baseline_wb_sunny_24"
                            android:id="@+id/imageView2"/>
                    <SeekBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/LightSeekBar"
                            android:layout_gravity="center_vertical" android:layout_marginStart="10dp"
                            android:layout_marginEnd="20dp" style="@style/FontSeekBar" android:max="100"
                    />
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="20dp" android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp">
                    <Button
                            android:text="Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/DeletePrefBT" android:layout_weight="1"/>
                    <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/imageButton3" android:background="#EEDFDFDF"
                    />
                    <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/imageButton" android:background="#D3F1D379"/>
                    <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/imageButton2" android:background="#D8B8DD8C"/>

                </LinearLayout>
            </LinearLayout>
            <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:menu="@menu/novel_content_bottom_nav"
                    app:itemTextColor="#CED1AA" app:itemRippleColor="#FFFFFF" app:itemIconSize="20dp"
                    android:visibility="visible"
                    android:id="@+id/bottomNavigation"
                    app:itemIconTint="@android:color/tab_indicator_text">
            </com.google.android.material.bottomnavigation.BottomNavigationView>
        </LinearLayout>
        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize" android:id="@+id/ToolBar"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" style="@style/NovelCotentTheme"
                android:background="?attr/colorPrimary"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>