<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="120dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="2dp"
            app:layout_constraintEnd_toEndOf="parent">
        <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent" tools:srcCompat="@android:drawable/ic_menu_report_image"
                android:id="@+id/imageView"
                android:layout_weight="1" android:layout_marginStart="10dp"
                app:srcCompat="@android:drawable/ic_menu_report_image"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:layout_marginStart="20dp"
                android:layout_marginTop="15dp">
            <TextView
                    android:text="叫我龍傲天"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/book_name" android:layout_weight="1"
                    android:textColor="#1E1508"/>
            <TextView
                    android:text="匿名"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/Book_authorView" android:layout_weight="1"
                    android:textSize="10sp" android:textColor="#65481E"
                    android:gravity="center_vertical" android:layout_marginTop="2dp" android:layout_marginStart="2dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/new_chapter" android:layout_weight="1"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/update_time" android:layout_weight="1"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/other" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>