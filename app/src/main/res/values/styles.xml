<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NightAppTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:textSize">10sp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BookDetailTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MyBookTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="MyBookMoreText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxLength">4</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="BookDetailButtonTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="text_color">@color/fontMorning</item>
    </style>

    <style name="NovelDetailTheme" parent="MyAppTheme">
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:popupMenuStyle">@style/ChapterMorePopMenu</item>
        <item name="popupMenuStyle">@style/ChapterMorePopMenu</item>
        <item name="textAppearanceSmallPopupMenu">@style/ChapterMorePopMenuTextApperance</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@android:color/black</item>
        <item name="titleTextStyle">@style/ActionModeTitleStyle</item>
    </style>

    <style name="ActionModeTitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/colorp</item>
    </style>

    <style name="NovelContentTheme" parent="MyAppTheme">
        <item name="android:textSize">10sp</item>
        <item name="android:textColorPrimary">@color/colorp</item>
        <item name="android:textColorSecondary">@color/colorp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="FontSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/seekbarthumb_fontsize</item>
        <item name="android:progressDrawable">@drawable/seekbarimg_fontsize</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">3dip</item>
        <item name="android:maxHeight">3dip</item>
        <item name="android:thumbOffset">8dip</item>
        <item name="android:focusable">true</item>
        <item name="android:mirrorForRtl">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_baseline_arrow_back_ios_24</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="DirectorySwitch" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#CBF6F6F0</item>
    </style>


    <style name="ChapterMorePopMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/directory_popmenu_background</item>
    </style>
    <style name="ChapterMorePopMenuTextApperance" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">#EB422BA8</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="MyDownloadTheme" parent="MyAppTheme">
        <item name="colorAccent">#5E5F60</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColorPrimary">@color/colorp</item>
        <item name="android:textColorSecondary">@color/colorp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="MySettingTitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#5E5757</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="MySettingSubTitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#706868</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="s" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#706868</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SearchViewCustom" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/searchLine</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">#E8767C26</item>
        <item name="itemTextColor">@drawable/bottom_navigation_item_color</item>
        <item name="itemIconTint">@drawable/bottom_navigation_item_color</item>
    </style>

</resources>
